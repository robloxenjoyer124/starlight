# Example configuration for EDL Downloader
# Copy this file to .env and fill in your values

# Output directory for downloads
OUTPUT_FOLDER=~/Downloads/EDL

# Default audio format (mp3, flac, wav, aac)
AUDIO_FORMAT=mp3

# Default audio quality in kbps (for lossy formats)
AUDIO_QUALITY=320

# Default video format
VIDEO_FORMAT=mkv

# Prefer MKV format for videos (true/false)
PREFER_MKV=true

# Embed artwork in audio files (true/false)
EMBED_ARTWORK=false

# Download entire playlists by default (true/false)
DOWNLOAD_PLAYLIST=false

# Maximum concurrent downloads
MAX_CONCURRENT_DOWNLOADS=3

# Optional: Platform-specific credentials
# YOUTUBE_USERNAME=your_username
# YOUTUBE_PASSWORD=your_password
# SOUNDCLOUD_USERNAME=your_username
# SOUNDCLOUD_PASSWORD=your_password